<div class="container">
    <h1>Usuarios</h1>
    <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-10">
            <div id="accordion">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Rol</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#usuarios}}
                        <tr>
                            <td>{{usuario}}</td>
                            <td>{{apellido}}</td>
                            <td>{{nombre}}</td>
                            <td>
                                {{rol_usuario.descripcion}}
                            </td>
                        </tr>
                    {{/usuarios}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-sm-1">
        </div>
    </div>
</div>
